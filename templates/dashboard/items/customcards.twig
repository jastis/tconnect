{% extends "dashboard/layout.twig" %}

{% block content %}
  
               <!-- TABLE: LATEST ORDERS -->
          <div class="card">
            <div class="card-header border-transparent">
              <h3 class="card-title">Custom Card Lists</h3>

              <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                  <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove">
                  <i class="fas fa-times"></i>
                </button>
              </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body p-0">
              <div class="table-responsive">
                <table id="example1" class="table table-bordered table-striped">
                  <thead>
                  <tr>
                    <th>S/N</th>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Card Template</th>
                    <th>Phone No.</th>
                    <th>Status</th>
                  </tr>
                  </thead>
                  <tbody>
                    {% set cnt = 1 %}
                    {% for card in customusers %}
                    
                  <tr>
                    <td><a href="#">{{cnt}}</a></td>
                    <td>{{card.first_name}} {{card.last_name}}</td>
                    <td>{{card.email}}</td>
                    <td>{{card.name}}</td>
                    <td>{{card.phone_no}}</td>
                    <td><span class="{{card.status ==1 ? 'badge badge-success':'badge badge-danger'}}">{{card.status==1?'Active':'Expired'}}</span></td>
                  
                    
                  </tr>
                  {% set cnt = cnt+ 1 %}
                  {%endfor%}
                  </tbody>
                </table>
              </div>
              <!-- /.table-responsive -->
            </div>
            <!-- /.card-body -->
            <div class="card-footer clearfix">
              
              <a href="javascript:void(0)" class="btn btn-sm btn-secondary float-right">View All Orders</a>
            </div>
            <!-- /.card-footer -->
          </div>
          <!-- /.card -->
        </div>
        <!-- /.col -->

        
        <!-- /.col -->
      
{% endblock %}

{% block js%}
<script src="/plugins/ekko-lightbox/ekko-lightbox.min.js"></script>
{%endblock%}