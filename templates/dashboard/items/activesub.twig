{% extends "dashboard/layout.twig" %}

{% block content %}
  
               <!-- TABLE: LATEST ORDERS -->
          <div class="card">
            <div class="card-header border-transparent">
              <h3 class="card-title">Active Subscribers</h3>

              <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                  <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove">
                  <i class="fas fa-times"></i>
                </button>
              </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body p-0">
              <div class="table-responsive">
                <table id="example1" class="table table-bordered table-striped">
                  <thead>
                  <tr>
                    <th>S/N</th>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Phone No.</th>
                    <th>Sub. Expiry Date</th>
                    <th>Status</th>
                    <th>Action</th>
                  </tr>
                  </thead>
                  <tbody>
                    {% set cnt = 1 %}
                    {% for auser in activesubs %}
                    
                  <tr>
                    <td><a href="#">{{cnt}}</a></td>
                    <td>{{auser.first_name}} {{auser.last_name}}</td>
                    <td>{{auser.email}}</td>
                    <td>{{auser.phone_no}}</td>
                    <td>{{auser.expiry_date}}</td>
                    <td><span class="{{auser.status ==1 ? 'badge badge-success':'badge badge-danger'}}">{{auser.status==1?'Active':'Expired'}}</span></td>
                    <td><a class="btn btn-app bg-warning">
                      <i class="fas fa-envelope"></i> Send Reminder
                    </a></td>
                  </tr>
                  {% set cnt = cnt+ 1 %}
                  {%endfor%}
                  </tbody>
                </table>
              </div>
              <!-- /.table-responsive -->
            </div>
            <!-- /.card-body -->
            
            <!-- /.card-footer -->
          </div>
          <!-- /.card -->
        </div>
        <!-- /.col -->

        
        <!-- /.col -->
      
{% endblock %}

{% block js%}
<script src="/plugins/ekko-lightbox/ekko-lightbox.min.js"></script>
{%endblock%}