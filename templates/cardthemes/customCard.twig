{% extends "dashboard/layout.twig" %}

{% block content %}
<div class="row">


<div class="col-md-5">
    <div class="card card-success">
        <div class="card-header">
          <h3 class="card-title">Upload New Card Details</h3>
          <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
              <i class="fas fa-minus"></i>
            </button>
            <button type="button" class="btn btn-tool" data-card-widget="remove">
              <i class="fas fa-times"></i>
            </button>
          </div>
        </div>
        <form id="frm_ccard">
        <div class="card-body">
          <div class="form-group">
            <label for="org_name">Name of Template</label>
            <input type="text" class="form-control" id="template_name"  name="template_name" placeholder="Template Name">
          </div>
          <div class="form-group">
            <label>Type</label>
            <select class="custom-select" name="type_id" >
             {% if req_id is null %}
              <option value="0">Free</option>
             <option value="1">Paid</option>
             {%else%}
             <option value="2">Custom</option>
              {%endif%}
            </select>
          </div>
          {% if req_id is not null %}
          <div class="form-group" >
            <input type="hidden" class="form-control" id="req_id" value="{{req_id}}"  name="req_id">
          </div>
          {%endif%}
          <div class="form-group">
            <label for="theme">Theme Json</label>
            <textarea class="form-control"  id="theme" name="theme" row="4" placeholder="Theme JSON"></textarea>
          </div>

      </div>
      <div class="card-footer">
        <button type="submit" class="btn btn-primary" id="btn_ccard">Create New Theme</button>
      </div>
      </form>
</div>

</div>

</div>

{% endblock %}

{% block js%}
<script src="/plugins/jquery-validation/jquery.validate.min.js"></script>
<script src="/plugins/jquery-validation/additional-methods.min.js"></script>
<script src="/dist/js/templateManager.js"></script>
{%endblock%}