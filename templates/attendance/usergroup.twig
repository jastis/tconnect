{% extends "dashboard/layout.twig" %}

{% block content %}
<div class="row">


<div class="col-md-5">
    <div class="card card-success">
        <div class="card-header">
          <h3 class="card-title">Upload User Group</h3>
          <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
              <i class="fas fa-minus"></i>
            </button>
            <button type="button" class="btn btn-tool" data-card-widget="remove">
              <i class="fas fa-times"></i>
            </button>
          </div>
        </div>
        <form id="frm_usergroup">
          <div class="form-group">
            <label for="exampleInputFile">Upload User Group</label>
            <div class="input-group">
              <div class="custom-file">
                <input type="file" class="custom-file-input" id="exampleInputFile" name="userg">
                <label class="custom-file-label" for="userg">Choose the CSV File</label>
              </div>
              <div class="input-group-append">
                <button type="submit" id="btn_usergroup" class="btn btn-primary">Upload Users</button>
              </div>
            </div>
          </div>
      </form>
      Sample Table:
      <table class="table m-0">
        <thead>
        <tr>
          <th>S/N</th>
          <th>Email</th>
          <th>Phone No</th>
        </tr>
       
      </table>

</div>

</div>
<div id="map"></div>
</div>
<div class="card">
    <div class="card-header border-0 ui-sortable-handle" style="cursor: move;">
        <h3 class="card-title">
          <i class="fas fa-map-marker-alt mr-1"></i>
          User Group
        </h3>
        <!-- card tools -->
        <div class="card-tools">
          <button type="button" class="btn btn-primary btn-sm daterange" title="Date range">
            <i class="far fa-calendar-alt"></i>
          </button>
          <button type="button" class="btn btn-primary btn-sm" data-card-widget="collapse" title="Collapse">
            <i class="fas fa-minus"></i>
          </button>
        </div>
        <!-- /.card-tools -->
      </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table m-0">
          <thead>
          <tr>
            
            <th>Email</th>
            <th>Phone </th>
          </tr>
          </thead>
          <tbody>
            {% for userg in usergroup %}
          <tr>
            
            <td>{{userg.email}}</td>
            <td>{{userg.phone}}</td>
            
          </tr>
          {%endfor%}
          </tbody>
        </table>
      </div>
      <!-- /.table-responsive -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer clearfix">
      <!-- <a href="javascript:void(0)" class="btn btn-sm btn-info float-left">Place New Order</a> -->
      <a href="/events" class="btn btn-sm btn-secondary float-right">View All Event</a>
    </div>
    <!-- /.card-footer -->
  </div>
{% endblock %}

{% block js%}
<script src="/dist/js/org.js"></script>
</script>
{%endblock%}